            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/dessert_spin"
            android:layout_weight=".7"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.15">
