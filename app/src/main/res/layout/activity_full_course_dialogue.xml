<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".homepage.mainfood.setMealMenu.dialogueForMeal.FullCourseDialogue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold|italic"
            android:text="MAIN COURSE:-"
            android:textSize="20sp"

            android:textColor="@color/purple_700"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="VEGAN STARTERS"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_margin="3dp"

            android:background="@android:color/holo_red_light"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="150dp"

            android:id="@+id/vs_mc_view"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:text="VEGAN SIDE DISHES"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_margin="3dp"
            android:background="@android:color/holo_red_light"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:id="@+id/vsd_mc_view"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold|italic"
            android:paddingTop="3dp"
            android:text="SUNDRIES:-"
            android:textSize="20sp"
            android:textColor="@color/purple_700"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="RICE DISHES"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_margin="3dp"
            android:background="@android:color/holo_red_light"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:id="@+id/sd_mc_view"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="OK"
            android:id="@+id/submit_all_button"/>

    </LinearLayout>



</LinearLayout>