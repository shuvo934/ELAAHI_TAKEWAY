<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homepage.mainfood.MainMenuActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="50dp"
                android:padding="35dp"
                android:layout_marginTop="20dp"
                android:layout_margin="10dp"
                android:elevation="50dp"
                android:outlineAmbientShadowColor="@color/black" >

                <ImageButton
                    android:id="@+id/main_menu_appitiser"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:onClick="menuItemClicked"
                    android:scaleType="center"
                    app:srcCompat="@drawable/design" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="10dp"
                    android:scrollbarSize="10dp"
                    android:shadowColor="@color/black"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:text="APPERTISERS"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold|italic"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="50dp"
                android:padding="35dp"
                android:layout_marginTop="20dp"
                android:elevation="50dp"
                android:outlineAmbientShadowColor="@color/black" >

                <ImageButton
                    android:id="@+id/main_menu_starter"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:onClick="menuItemClicked"
                    app:srcCompat="@drawable/design" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="10dp"
                    android:scrollbarSize="10dp"
                    android:shadowColor="@color/black"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:text="STARTERS"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold|italic"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="50dp"
                android:padding="35dp"
                android:layout_marginTop="20dp"
                android:elevation="50dp"
                android:outlineAmbientShadowColor="@color/black" >

                <ImageButton
                    android:id="@+id/main_menu_mainCourse"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:onClick="menuItemClicked"
                    app:srcCompat="@drawable/design" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="10dp"
                    android:scrollbarSize="10dp"
                    android:shadowColor="@color/black"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:text="MAIN COURSES"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold|italic"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="50dp"
                android:padding="35dp"
                android:layout_marginTop="20dp"
                android:elevation="50dp"
                android:layout_margin="10dp"
                android:outlineAmbientShadowColor="@color/black" >

                <ImageButton
                    android:id="@+id/main_menu_side_dishes"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:onClick="menuItemClicked"
                    app:srcCompat="@drawable/design" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="10dp"
                    android:scrollbarSize="10dp"
                    android:shadowColor="@color/black"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:text="SIDE DISHES"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold|italic"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="50dp"
                android:padding="35dp"
                android:layout_marginTop="20dp"
                android:elevation="50dp"
                android:outlineAmbientShadowColor="@color/black" >

                <ImageButton
                    android:id="@+id/main_menu_rice_dishes"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:onClick="menuItemClicked"
                    android:scaleType="center"
                    app:srcCompat="@drawable/design" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="10dp"
                    android:scrollbarSize="10dp"
                    android:shadowColor="@color/black"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:text="RICE DISHES"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold|italic"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="50dp"
                android:padding="35dp"
                android:layout_marginTop="20dp"
                android:layout_margin="10dp"
                android:elevation="50dp"
                android:outlineAmbientShadowColor="@color/black" >

                <ImageButton
                    android:id="@+id/main_menu_sun_dries"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:onClick="menuItemClicked"
                    app:srcCompat="@drawable/design" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="10dp"
                    android:scrollbarSize="10dp"
                    android:shadowColor="@color/black"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:text="SUNDRIES"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold|italic"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="50dp"
                android:padding="35dp"
                android:layout_marginTop="20dp"
                android:layout_margin="10dp"
                android:elevation="50dp"
                android:outlineAmbientShadowColor="@color/black" >

                <ImageButton
                    android:id="@+id/main_menu_children_menu"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:onClick="menuItemClicked"
                    app:srcCompat="@drawable/design" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="10dp"
                    android:scrollbarSize="10dp"
                    android:shadowColor="@color/black"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:text="CHILDRENS MENU"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold|italic"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="50dp"
                android:padding="35dp"
                android:layout_marginTop="20dp"
                android:elevation="50dp"
                android:outlineAmbientShadowColor="@color/black" >

                <ImageButton
                    android:id="@+id/main_menu_dessert"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:onClick="menuItemClicked"
                    app:srcCompat="@drawable/design" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="10dp"
                    android:scrollbarSize="10dp"
                    android:shadowColor="@color/black"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:text="DESSERTS"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold|italic"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="50dp"
                android:padding="35dp"
                android:layout_marginTop="20dp"
                android:layout_margin="10dp"
                android:elevation="50dp"
                android:outlineAmbientShadowColor="@color/black" >

                <ImageButton
                    android:id="@+id/main_menu_drinks"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:onClick="menuItemClicked"
                    app:srcCompat="@drawable/design" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="10dp"
                    android:scrollbarSize="10dp"
                    android:shadowColor="@color/black"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:text="DRINKS"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold|italic"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="50dp"
                android:padding="35dp"
                android:layout_marginTop="20dp"
                android:layout_margin="10dp"
                android:elevation="50dp"
                android:outlineAmbientShadowColor="@color/black" >

                <ImageButton
                    android:id="@+id/main_menu_set_meal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:onClick="menuItemClicked"
                    app:srcCompat="@drawable/design" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="10dp"
                    android:scrollbarSize="10dp"
                    android:shadowColor="@color/black"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:text="SET MEAL"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold|italic"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>